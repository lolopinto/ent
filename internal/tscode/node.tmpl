export default class {{.Node}} {

  {{range $field := .FieldInfo.Fields -}}
    readonly {{$field.TsFieldName}}: {{$field.TsType}};
  {{end}}

  // TODO viewer...
  constructor(id: ID, options:{}) {
    this.id = id;
