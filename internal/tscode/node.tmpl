    return loadEnt(id, {{.Node}}.getOptions());
  }

  // also TODO viewer
  static async loadX(id: ID): Promise<{{.Node}}> {
    return loadEntX(id, {{.Node}}.getOptions());
  }

  private static getFields(): string[] {
    return [
    {{range $field := .FieldInfo.Fields -}}
      '{{$field.GetDbColName}}',
    {{end}}
    ];
  }

