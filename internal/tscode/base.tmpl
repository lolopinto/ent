{{ $privacyCfg := .PrivacyConfig -}}
{{ $cfg := .CodePath -}}

{{with .NodeData -}}
{{$loaderInfo := printf "%sLoaderInfo" .NodeInstance -}}
{{$loaderName := .GetLoaderName -}}
