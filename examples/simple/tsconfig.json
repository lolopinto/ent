{
  "compilerOptions": {
    "lib": ["es2018", "esnext.asynciterable"],
    "outDir": "./dist",
    "target": "es2020",
    "strictNullChecks": true,
    "module": "commonjs",
    "downlevelIteration": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "noUnusedLocals": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "tests/**/*"]
}
